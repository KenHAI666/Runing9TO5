source "https://rubygems.org"

# GitHub Pages 官方建議的 gem
gem "github-pages", group: :jekyll_plugins

# 其他可選 plugin
group :jekyll_plugins do
  gem "jekyll-feed"
  gem "jekyll-sitemap"
  gem "jekyll-seo-tag"
end

# Windows 平台需要的時區資料
platforms :mingw, :x64_mingw, :mswin, :jruby do
  gem "tzinfo-data", "~> 2"
  gem "wdm", "~> 0.1.1"
  gem "http_parser.rb", "~> 0.6.0"
end
